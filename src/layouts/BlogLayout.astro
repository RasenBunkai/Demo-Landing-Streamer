---
import Layout from "./Layout.astro";
const {frontmatter} = Astro.props;
const {title, author, pubDate, description, image} = frontmatter;
---

<Layout title={frontmatter.title} />
<header class="relative bg-gradient-to-b from-purple-900 to-black py-16 px-4">
  <!-- Imagen de cabecera -->
  {
    image && (
      <div class="absolute inset-0 z-0 opacity-20">
        <img
          src={image}
          alt={title}
          class="w-full h-full object-cover"
          loading="lazy"
        />
      </div>
    )
  }

  <div class="max-w-4xl mx-auto text-center relative z-10">
    <h1 class="text-4xl md:text-5xl font-bold text-white mb-4 leading-tight">
      {title}
    </h1>

    <div class="flex items-center justify-center gap-4 mb-6">
      <div
        class="w-10 h-10 rounded-full bg-purple-500 flex items-center justify-center text-white font-bold">
        {author.charAt(0)}
      </div>
      <div class="text-left">
        <p class="text-sm text-purple-300">
          Publicado el <time class="font-medium"
            >{pubDate.toString().slice(0, 10)}</time
          >
        </p>
        <p class="text-sm text-gray-300">por {author}</p>
      </div>
    </div>

    <p class="text-xl text-purple-100 max-w-2xl mx-auto">
      {description}
    </p>
  </div>
</header>

<main class="px-4 py-12 max-w-4xl mx-auto">
  <article
    class="prose prose-invert max-w-none prose-lg prose-headings:text-purple-300 prose-a:text-purple-400 hover:prose-a:text-purple-300 prose-img:rounded-xl prose-img:shadow-lg prose-img:border prose-img:border-purple-900/50">
    <slot />
  </article>
</main>

<!-- Sección de posts relacionados -->
<section class="py-12 bg-gradient-to-b from-black to-purple-950 px-4">
  <div class="max-w-4xl mx-auto">
    <h2 class="text-2xl font-bold text-purple-300 mb-8">Más artículos</h2>
    <div class="grid md:grid-cols-2 gap-8">
      <!-- Aquí podrías incluir un componente de posts relacionados -->
    </div>
  </div>
</section>

<style>
  .prose {
    --tw-prose-headings: #7561c7;
    --tw-prose-body: #5d2c91;
    --tw-prose-links: #5d30e2;
    --tw-prose-pre-code: #7546a7;
    --tw-prose-pre-bg: #1e1b4b;
    --tw-prose-code: #835cac;
    --tw-prose-bold: #411a6b;
  }

  .prose img {
    transition: transform 0.3s ease;
  }

  .prose img:hover {
    transform: scale(1.02);
  }
</style>
