---
// Props del componente
interface Props {
  CardTitle: string;
  CardDate: string;
  CardContent: string;
  class?: string;
}

const {CardTitle, CardDate, CardContent} = Astro.props;
---

<div
  class="py-6 px-12 space-y-2 bg-gradient-to-r from-slate-800 to-gray-900 border border-purple-900/50 rounded-lg shadow-lg hover:shadow-purple-900/20 transition-shadow">
  <div class="border-b border-purple-900">
    <h3
      class="text-2xl font-semibold leading-tight tracking-tight text-purple-400">
      {CardTitle}
    </h3>
  </div>
  <div class="flex-1">
    <p class="text-white text-lg font-medium flex items-center gap-2">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="20"
        height="20"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="text-purple-400">
        <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
        <line x1="16" y1="2" x2="16" y2="6"></line>
        <line x1="8" y1="2" x2="8" y2="6"></line>
        <line x1="3" y1="10" x2="21" y2="10"></line>
      </svg>
      {CardDate}
    </p>
    <p class="font-medium text-gray-400 leading-relaxed">
      {CardContent}
    </p>
  </div>
</div>
