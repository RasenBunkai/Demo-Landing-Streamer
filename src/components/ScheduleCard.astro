---
import Calendar from "./svg/Calendar.astro";
interface Props {
  CardTitle: string;
  CardDate: string;
  CardContent: string;
}

const {CardTitle, CardDate, CardContent} = Astro.props;
---

<div
  class="py-6 px-12 space-y-2 bg-gradient-to-r from-slate-800 to-gray-900 border border-purple-900/50 rounded-lg shadow-lg hover:shadow-purple-900/80 duration-300 hover:scale-105 transition-all">
  <div class="border-b border-purple-900">
    <h4
      class="text-2xl font-semibold leading-tight tracking-tighter text-pretty text-purple-400 pointer-events-none">
      {CardTitle}
    </h4>
  </div>
  <div class="flex-1 pointer-events-none">
    <p class="text-white text-lg font-medium flex items-center gap-2">
      <Calendar />
      {CardDate}
    </p>
    <p class="font-medium text-gray-400 leading-relaxed">
      {CardContent}
    </p>
  </div>
</div>
