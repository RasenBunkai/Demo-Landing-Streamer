---
import Twitch from "./svg/Twitch.astro";
import Youtube from "./svg/Youtube.astro";
import Twitter from "./svg/Twitter.astro";
import Tiktok from "./svg/Tiktok.astro";

const socialLinks = [
  {
    name: "Twitch",
    icon: Twitch,
    url: "https://www.twitch.tv/",
    size: "w-5 h-5",
  },
  {name: "YouTube", icon: Youtube, url: "https://youtube.com", size: "w-6 h-6"},
  {name: "Twitter", icon: Twitter, url: "https://twitter.com", size: "w-5 h-5"},
  {
    name: "Tiktok",
    icon: Tiktok,
    url: "https://www.tiktok.com/",
    size: "w-5 h-5",
  },
];
---

<footer class="border-t border-purple-900/20 bg-black backdrop-blur-sm py-8">
  <div class="container mx-auto px-4 max-w-6xl">
    <div class="flex flex-col md:flex-row items-center justify-between gap-6">
      <a
        href="/"
        class="group flex items-center gap-2 hover:opacity-90 transition-opacity">
        <div
          class="relative h-9 w-9 transition-transform duration-300 group-hover:rotate-6">
          <div
            class="absolute inset-0 rounded-full bg-gradient-to-br from-purple-600 to-pink-500 shadow-md">
          </div>
          <div
            class="absolute inset-[2px] flex items-center justify-center rounded-full bg-black text-lg font-bold text-purple-400">
            Z
          </div>
        </div>
        <span
          class="text-xl font-bold tracking-tight bg-gradient-to-r from-purple-400 to-pink-400 bg-clip-text text-transparent">
          ZetaStream
        </span>
      </a>
      <div class="flex items-center gap-6">
        {
          socialLinks.map(({name, icon: Icon, url, size}) => (
            <a href={url} target="_blank" rel="noopener noreferrer">
              <Icon class={`${size} hover:translate-y-[2px] transition`} />
              <span class="sr-only">{name}</span>
            </a>
          ))
        }
      </div>
      <div class="text-sm text-gray-400 hover:text-white transition-colors">
        Â© {new Date().getFullYear()} Proyecto ZetaStream by Rasen.
      </div>
    </div>
  </div>
</footer>